{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/frontend/**/*.d.ts",
    "src/frontend/**/*.tsx",
    "src/frontend/**/*.ts",
    "src/shared/**/*.ts",
    "src/backend/preload.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/backend/*"],
      "@frontend/*": ["src/frontend/*"],
      "@shared/*": ["src/shared/*"],
    }
  }
}