{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/preload/*.d.ts", 
    "src/renderer/**/*.d.ts",
    "src/renderer/**/*.tsx",
    "src/renderer/**/*.ts",
    "src/renderer/components",
    "src/renderer/lib",
    "src/main/preload.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "paths": {
      "@renderer/*": [
        "src/renderer/*"
      ]
    }
  }
}
